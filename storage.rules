rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Public read access for all files.
    // This allows the app to display logos and other public assets.
    match /{allPaths=**} {
      allow read: if true;
    }

    // Allow write access ONLY for authenticated users to their own files
    // in designated folders. This prevents users from writing to other users' folders.

    match /profile_pictures/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /chat_images/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /chat_audio/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /indicated_points_images/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /images/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }

    match /videos/{userId}/{fileName} {
      allow write: if request.auth.uid == userId;
    }
  }
}
