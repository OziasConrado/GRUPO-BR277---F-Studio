rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite a leitura pública de todas as imagens, exceto perfis
    match /images/{allPaths=**} {
      allow read: if true;
    }
    
    // Permite a leitura pública das imagens de perfil
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if true;
      // Permite que apenas o usuário autenticado escreva em sua própria pasta de perfil
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite leitura pública de imagens de posts
    match /post_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite leitura pública de vídeos dos Reels/Stories
    match /reels/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite leitura pública de imagens do Guia Comercial
    match /business_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /business_promo_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite leitura pública de imagens do Turismo
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite leitura pública de áudios do chat
    match /chat_audio/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite leitura pública de imagens do chat
    match /chat_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
