rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regra geral: Leitura pública para todos os arquivos
    match /{allPaths=**} {
      allow read;
    }

    // Regras de escrita por pasta:
    
    // Usuários autenticados podem escrever em suas próprias pastas de perfil
    match /profile_pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Usuários autenticados podem escrever posts em suas próprias pastas
    match /posts/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Usuários autenticados podem escrever reels em suas próprias pastas
    match /reels/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Usuários autenticados podem enviar imagens e áudios no chat
    match /chat_images/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /chat_audio/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Usuários autenticados podem indicar pontos turísticos
    match /indicated_points_images/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
