rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Helper functions
    function isImage(request) {
      return request.resource.contentType.matches('image/.*');
    }
    function isVideo(request) {
      return request.resource.contentType.matches('video/.*');
    }
     function isAudio(request) {
      return request.resource.contentType.matches('audio/.*');
    }

    // Profile Pictures (Max 2MB)
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && isImage(request)
                   && request.resource.size < 2 * 1024 * 1024;
    }

    // Post Images (from create post card, max 5MB)
    match /images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && isImage(request)
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // Post Videos (Reels, from create post card, max 50MB)
    match /videos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId
                   && isVideo(request)
                   && request.resource.size < 50 * 1024 * 1024;
    }

    // Chat Images (Max 5MB)
    match /chat_images/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && isImage(request)
                   && request.resource.size < 5 * 1024 * 1024;
    }

    // Chat Audio (Max 5MB)
    match /chat_audio/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId
                   && isAudio(request)
                   && request.resource.size < 5 * 1024 * 1024;
    }
    
    // Tourist Points Images (Max 2MB)
    match /indicated_points_images/{userId}/{fileName} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId
                     && isImage(request)
                     && request.resource.size < 2 * 1024 * 1024;
    }

    // Publicly readable assets (Logos, Icons, etc.)
    match /Ícones e Logo do app GRUPO BR277/{allPaths=**} {
      allow read: if true;
      allow write: if false; // Only allow uploads via Firebase Console
    }
    
  }
}