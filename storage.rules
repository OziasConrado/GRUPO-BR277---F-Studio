rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // Regras para conteúdo gerado pelo usuário.
    // O usuário só pode ler e escrever em seus próprios arquivos.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /videos/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /chat_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /chat_audio/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para recursos estáticos públicos (logos, ícones, etc.)
    // Permite que qualquer pessoa leia esses arquivos.
    match /Concessões de Pedágio/{allPaths=**} {
      allow read;
      allow write: if false; // Ninguém pode escrever
    }
    match /Ícones e Logo do app GRUPO BR277/{allPaths=**} {
      allow read;
      allow write: if false; // Ninguém pode escrever
    }

    // Regra padrão para negar acesso a qualquer outro caminho
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
