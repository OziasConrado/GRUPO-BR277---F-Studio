rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // As fotos de perfil só podem ser escritas pelo próprio usuário.
    // A leitura é pública.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Imagens de postagens podem ser lidas por qualquer pessoa, mas apenas criadas pelo usuário.
    match /images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Vídeos de postagens (reels) podem ser lidos por qualquer pessoa, mas apenas criados pelo usuário.
    match /videos/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Imagens do chat
    match /chat_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Áudios do chat
    match /chat_audio/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Imagens de pontos turísticos indicados
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow read;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
