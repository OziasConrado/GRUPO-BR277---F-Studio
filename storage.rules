rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regra genérica para cobrir todas as pastas de usuário
    // Ex: /profile_pictures/{userId}/, /images/{userId}/, /videos/{userId}/, etc.
    match /{folder}/{userId}/{allPaths=**} {
      // Qualquer usuário autenticado pode ler arquivos.
      // Comum em apps sociais onde o conteúdo é público.
      allow read: if request.auth != null;
      
      // Apenas o proprietário da pasta pode escrever nela.
      // O {userId} no caminho DEVE corresponder ao UID do usuário logado.
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
