
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura por qualquer pessoa (para exibir imagens publicamente)
    match /{allPaths=**} {
      allow read;
    }
    
    // Permite escrita (upload, update, delete) apenas para usuários autenticados.
    // Isso é seguro e necessário para upload de fotos de perfil, posts, etc.
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
