rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // ATENÇÃO: Regra temporária para diagnóstico.
    // Permite leitura e escrita pública para isolar o problema de upload.
    // Esta regra é insegura e deve ser substituída por regras restritivas
    // assim que o problema de upload for resolvido.
    match /{allPaths=**} {
      allow read, write;
    }
  }
}
