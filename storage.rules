rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Regra geral: permitir leitura pública para todos os arquivos
    match /{allPaths=**} {
      allow read;
      // Nega a escrita por padrão para todos, a menos que especificado abaixo
      allow write: if false;
    }

    // Regra para fotos de perfil:
    // Permite que um usuário autenticado escreva em sua própria pasta de fotos de perfil.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para imagens do chat:
    // Permite que qualquer usuário autenticado envie imagens para o chat.
    match /chat_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para áudios do chat:
    // Permite que qualquer usuário autenticado envie áudios para o chat.
    match /chat_audio/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para imagens e vídeos do feed (posts e reels):
    // Permite que qualquer usuário autenticado envie para as pastas de imagens e vídeos.
    match /images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /videos/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para imagens de pontos turísticos indicados
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
