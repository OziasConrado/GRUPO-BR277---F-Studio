
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Helper functions for validation
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isImage(maxSizeMB) {
      return request.resource.contentType.matches('image/.*') && request.resource.size < maxSizeMB * 1024 * 1024;
    }

    function isVideo(maxSizeMB) {
        return request.resource.contentType.matches('video/.*') && request.resource.size < maxSizeMB * 1024 * 1024;
    }

    function isAudio(maxSizeMB) {
        return request.resource.contentType.matches('audio/.*') && request.resource.size < maxSizeMB * 1024 * 1024;
    }

    // Profile pictures (images, up to 2MB)
    match /profile_pictures/{userId}/{fileName} {
      allow read;
      allow write: if isOwner(userId) && isImage(2);
    }

    // Feed images (up to 5MB)
    match /images/{userId}/{fileName} {
      allow read;
      allow write: if isOwner(userId) && isImage(5);
    }

    // Feed videos (up to 50MB)
    match /videos/{userId}/{fileName} {
      allow read;
      allow write: if isOwner(userId) && isVideo(50);
    }
    
    // Chat audio (up to 5MB)
    match /chat_audio/{userId}/{fileName} {
        allow read;
        allow write: if isOwner(userId) && isAudio(5);
    }

    // Chat images (up to 5MB)
    match /chat_images/{userId}/{fileName} {
        allow read;
        allow write: if isOwner(userId) && isImage(5);
    }

    // Tourist point images (up to 2MB)
    match /indicated_points_images/{userId}/{fileName} {
        allow read;
        allow write: if isOwner(userId) && isImage(2);
    }
    
    // Public assets (Logos, etc.) can be made readable by all
    match /Ícones e Logo do app GRUPO BR277/{allPaths=**} {
        allow read;
    }
  }
}
