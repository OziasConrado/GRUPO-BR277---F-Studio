rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Allow public read on all files, this is useful for public assets like logos.
    // In a production app with sensitive data, you might want more restrictive read rules.
    match /{allPaths=**} {
      allow read;
    }
    
    // Users can only write to their own profile pictures directory.
    match /profile_pictures/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Users can only write to their own chat media directories.
    match /chat_images/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    match /chat_audio/{userId}/{fileName} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Users can only write to their own indicated tourist points directory.
    match /indicated_points_images/{userId}/{fileName} {
        allow write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
