rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite que todos leiam qualquer arquivo. 
    // Essencial para que as imagens e vídeos apareçam no app para todos os usuários.
    match /{allPaths=**} {
      allow read;
    }

    // Permite que qualquer usuário autenticado escreva (crie, atualize, delete)
    // em qualquer local. Isso simplifica a gestão, mas em produção, você
    // pode querer regras mais específicas por pasta (ex: um usuário só pode mudar a própria foto).
    match /{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
