rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {

    // --- Helper Functions ---
    function isOwner(userId) {
      return request.auth != null && request.auth.uid == userId;
    }

    function isImage(maxSizeMB) {
      return request.resource.contentType.matches('image/.*') 
             && request.resource.size < maxSizeMB * 1024 * 1024;
    }

    function isVideo(maxSizeMB) {
      return request.resource.contentType.matches('video/.*') 
             && request.resource.size < maxSizeMB * 1024 * 1024;
    }
    
    function isAudio(maxSizeMB) {
      return request.resource.contentType.matches('audio/.*') 
             && request.resource.size < maxSizeMB * 1024 * 1024;
    }

    // --- Path Rules ---

    // Profile Pictures: Logged-in users can read, owner can write images up to 2MB.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) && isImage(2);
    }

    // Chat Media: Logged-in users can read. Owner can write images (5MB) or audio (10MB).
    match /chat_images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) && isImage(5);
    }
    match /chat_audio/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) && isAudio(10);
    }

    // Feed Media (Reels and Posts): Logged-in users can read. Owner can write images (5MB) or videos (50MB).
    match /images/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) && isImage(5);
    }
    match /videos/{userId}/{allPaths=**} {
      allow read: if request.auth != null;
      allow write: if isOwner(userId) && isVideo(50);
    }

    // Tourist Point Images: Logged-in users can read. Owner can write images up to 2MB.
    match /indicated_points_images/{userId}/{fileName} {
       allow read: if request.auth != null;
       allow write: if isOwner(userId) && isImage(2);
    }
    
    // Business Guide Images: Logged-in users can read. Owner can write images up to 2MB.
    match /business_guide_images/{userId}/{fileName} {
       allow read: if request.auth != null;
       allow write: if isOwner(userId) && isImage(2);
    }
  }
}
