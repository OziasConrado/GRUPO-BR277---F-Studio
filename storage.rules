rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra para fotos de perfil.
    // Permite leitura pública (para que todos vejam os avatares).
    // Permite escrita apenas se o usuário estiver autenticado e o ID na pasta for o dele.
    match /profile_pictures/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para imagens do chat.
    match /chat_images/{userId}/{fileName} {
      allow read: if request.auth != null; // Apenas usuários logados podem ver imagens do chat
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para áudios do chat.
    match /chat_audio/{userId}/{fileName} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para imagens do feed.
    match /images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para vídeos do feed (Reels).
    match /videos/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para imagens de pontos turísticos indicados.
    match /indicated_points_images/{userId}/{fileName} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regras para assets públicos da aplicação (logos, etc.).
    // O nome das pastas não pode ter acentos ou caracteres especiais.
    match /Concessoes de Pedagio/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
    match /Icones e Logo do app GRUPO BR277/{allPaths=**} {
      allow read: if true;
      allow write: if false;
    }
  }
}
