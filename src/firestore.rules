rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    match /posts/{postId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
      
      // Regras para comentários
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if request.auth.uid == resource.data.userId;
        
        // Reações a comentários
        match /commentReactions/{userId} {
            allow read: if true;
            allow create, delete: if request.auth.uid == userId;
        }
      }
      
      // Reações a posts
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if request.auth.uid == userId;
      }
    }

    match /Usuarios/{userId} {
      // PERMISSÃO CORRIGIDA: Permite a leitura de qualquer perfil (necessário para o servidor e para exibir perfis de outros usuários).
      // A escrita continua restrita apenas ao próprio usuário.
      allow read: if true;
      allow write: if request.auth.uid == userId;
      
      match /notifications/{notificationId} {
        allow read, write: if request.auth.uid == userId;
      }
    }

    match /businesses/{businessId} {
      allow read: if true;
      allow create, update: if request.auth != null; // Permite criação e atualização se logado
      allow delete: if request.auth.uid == resource.data.ownerId; // Apenas o dono pode deletar
    }
    
    match /sau_reviews/{reviewId} {
      allow read: if true;
      allow create: if request.auth != null;
    }
    
    match /reels/{reelId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.authorId;
      
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null;
      }
      
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if request.auth.uid == userId;
      }
    }

    match /tourist_points_indicated/{pointId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if true; // Permitir que o admin atualize o status
    }

    match /tourist_point_reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
    }
    
    match /chatMessages/{messageId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update, delete: if request.auth.uid == resource.data.userId;
      
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if request.auth.uid == userId;
      }
    }
  }
}
