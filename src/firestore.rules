
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Banners: Public read is allowed, Admin can write.
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Posts: Authenticated read, authenticated write/update/delete
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.userId);
      }

      match /userReactions/{userId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
      
      match /userVotes/{userId} {
         allow read: if isAuthenticated();
         allow write: if isOwner(userId);
      }
    }

    // Reels: Authenticated read, authenticated write/update/delete
    match /reels/{reelId} {
      allow read: if isAuthenticated() && resource.data.deleted != true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.authorId);

      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.userId);
      }

      match /userReactions/{userId} {
        allow read: if isAuthenticated();
        allow write: if isOwner(userId);
      }
    }

    // Alerts: Authenticated read, authenticated write
    match /alerts/{alertId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // Businesses: Authenticated read, authenticated write
    match /businesses/{businessId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if false;
    }

    // SAU Reviews: Authenticated read/write
    match /sau_reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Tourist Points: Authenticated read/write
    match /tourist_points_indicated/{pointId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.indicatedByUserId);
    }

    match /tourist_point_reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);
    }

    // User Profiles: Read for any authenticated user, write only for the owner.
    match /users/{userId} { 
      allow read: if isAuthenticated();
      allow create, update: if isOwner(userId);
      allow delete: if false;

      match /notifications/{notificationId} {
        allow read, update, delete: if isOwner(userId);
        allow create: if isAuthenticated(); 
      }
    }

    // Chat Messages: Authenticated read/write
    match /chatMessages/{messageId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);

      match /userReactions/{reactionId} {
        allow read: if isAuthenticated();
        allow create, update, delete: if reactionId == request.auth.uid;
      }
    }
  }
}
