
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Helper function to check if the user is an admin
    function isAdmin() {
      return isAuthenticated() && request.auth.token.admin == true;
    }

    // Banners: Public read is allowed, Admin can write.
    match /banners/{bannerId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    // Posts: Authenticated read, authenticated write/update/delete
    match /posts/{postId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Only the owner of the post can update/delete it
      allow update, delete: if isOwner(resource.data.userId);

      // Comments on posts
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        // Only the owner of the comment can update/delete it
        allow update, delete: if isOwner(resource.data.userId);
      }

      // Reactions on posts
      match /userReactions/{userId} {
        allow read: if isAuthenticated();
        // Only the authenticated user can manage their own reaction
        allow write: if isOwner(userId);
      }
      
      // Votes on polls inside posts
      match /userVotes/{userId} {
         allow read: if isAuthenticated();
         allow write: if isOwner(userId);
      }
    }

    // Reels: Authenticated read, authenticated write/update/delete
    match /reels/{reelId} {
      // Only read if 'deleted' field is not explicitly true
      allow read: if isAuthenticated() && resource.data.deleted != true;
      allow create: if isAuthenticated();
      // Only the author of the reel can update/delete it
      allow update, delete: if isOwner(resource.data.authorId);

      // Comments on reels
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated();
        // Only the owner of the comment can update/delete it
        allow update, delete: if isOwner(resource.data.userId);
      }

      // Reactions on reels
      match /userReactions/{userId} {
        allow read: if isAuthenticated();
        // Only the authenticated user can manage their own reaction
        allow write: if isOwner(userId);
      }
    }

    // Alerts: Public read is allowed, authenticated write
    match /alerts/{alertId} {
      allow read: if true;
      allow create: if true; // Temporarily open for REST API testing from Server Actions
      allow delete: if isOwner(resource.data.userId) || isAdmin();
      allow update: if false; 
    }

    // Businesses (Guia Comercial): Authenticated read, authenticated write
    match /businesses/{businessId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Only the owner of the business can update it
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if false; // Prevent deletion
    }

    // SAU Reviews: Authenticated read, authenticated write
    match /sau_reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Only the owner of the review can update/delete it
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Tourist Points: Authenticated read, authenticated write
    match /tourist_points_indicated/{pointId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Only the user who indicated the point can update/delete it
      allow update, delete: if isOwner(resource.data.indicatedByUserId);
    }

    // Tourist Point Reviews: Authenticated read, authenticated write
    match /tourist_point_reviews/{reviewId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      // Only the owner of the review can update/delete it
      allow update, delete: if isOwner(resource.data.userId);
    }

    // User Profiles: Read for any authenticated user, write only for the owner.
    match /users/{userId} { 
      allow read: if isAuthenticated();
      // Allow update if owner OR if only the 'favorites' field is being changed by the server action
      allow update: if isOwner(userId) || (request.resource.data.diff(resource.data).affectedKeys().hasOnly(['favorites']));
      allow create: if isOwner(userId);
      allow delete: if false; // Users cannot delete their own profiles via client

       // Notifications subcollection
      match /notifications/{notificationId} {
        // Only the profile owner can read/update/delete their notifications
        allow read, update, delete: if isOwner(userId);
        // Any authenticated user can create a notification (e.g., server could create it for another user)
        allow create: if isAuthenticated(); 
      }
    }

    // Chat Messages: Read/write for authenticated users
    match /chatMessages/{messageId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);

      // Reactions on chat messages
      match /userReactions/{reactionId} {
        allow read: if isAuthenticated();
        // Only the authenticated user can manage their own reaction
        allow create, update, delete: if reactionId == request.auth.uid;
      }
    }
  }
}
