
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Posts: Public read, authenticated write/update/delete
    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.userId);

      // Comments on posts
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.userId);
      }
      
      match /userReactions/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
    }

    // Reels: Public read, authenticated write/update/delete
    match /reels/{reelId} {
      allow read: if resource.data.deleted == false;
      allow create: if isAuthenticated();
      allow update, delete: if isOwner(resource.data.authorId);

      // Comments on reels
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
        allow update, delete: if isOwner(resource.data.userId);
      }

      // Reactions on reels
      match /userReactions/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
    }

    // Alerts: Public read, authenticated write
    match /alerts/{alertId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if false; // Alerts are generally not editable/deletable by users
    }

    // Businesses (Guia Comercial): Public read, authenticated write
    match /businesses/{businessId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Only the owner of the business can update it
      allow update: if isOwner(resource.data.ownerId);
      allow delete: if false; // Prevent deletion
    }

    // SAU Reviews: Public read, authenticated write
    match /sau_reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Only the owner of the review can update/delete it
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Tourist Points: Public read, authenticated write
    match /tourist_points_indicated/{pointId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Only the user who indicated the point can update/delete it
      allow update, delete: if isOwner(resource.data.indicatedByUserId);
    }

    // Tourist Point Reviews: Public read, authenticated write
    match /tourist_point_reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      // Only the owner of the review can update/delete it
      allow update, delete: if isOwner(resource.data.userId);
    }

    // User Profiles: Read for any authenticated user, write only for the owner.
    match /users/{userId} { 
      allow read: if isAuthenticated();
      // Allow user to create and update their own document.
      allow write: if isOwner(userId);

       // Notifications subcollection
      match /notifications/{notificationId} {
        // Only the profile owner can read/update/delete their notifications
        allow read, update, delete: if isOwner(userId);
        // Only authenticated users can create notifications
        allow create: if isAuthenticated(); 
      }
    }
    
    // Chat Messages: Authenticated users can read/write.
    match /chatMessages/{messageId} {
      allow read, create: if isAuthenticated();
      // Only the owner of a message can edit/delete it.
      allow update, delete: if isOwner(resource.data.userId);
      
      // Reactions on chat messages
      match /userReactions/{userId} {
        allow read: if true;
        allow write: if isOwner(userId);
      }
    }
  }
}
