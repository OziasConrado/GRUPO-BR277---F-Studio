
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regras para upload de usuários (fotos de perfil, etc.)
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chat_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /chat_audio/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /posts/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /reels_media/{userId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
    }

    match /business_images/{businessId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }
    
    match /business_promo_images/{businessId}/{allPaths=**} {
        allow read: if true;
        allow write: if request.auth != null;
    }

    // Regras para pastas com conteúdo público (apenas leitura)
    match /images/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }

    match /'Concessões de Pedágio'/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }
    
    match /'Ícones e Logo do app GRUPO BR277'/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }
  }
}
