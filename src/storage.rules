rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Permite leitura e escrita pública em todos os arquivos para facilitar o desenvolvimento.
    // ATENÇÃO: Em produção, estas regras devem ser mais restritivas.
    match /{allPaths=**} {
      allow read, write: if true;
    }
  }
}
