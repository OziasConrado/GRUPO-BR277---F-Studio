
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // Regra geral de leitura: qualquer um pode ler arquivos.
    // Isso cobre as imagens de UI, logos e outros assets públicos.
    allow read: if true;

    // Regras de escrita (upload/delete) são mais restritivas.

    // Permite que um usuário autenticado escreva apenas em sua própria pasta de fotos de perfil.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite que um usuário autenticado escreva apenas em sua própria pasta de imagens para pontos turísticos.
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que um usuário autenticado escreva apenas em sua própria pasta de imagens do chat.
    match /chat_images/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Permite que um usuário autenticado escreva apenas em sua própria pasta de áudios do chat.
    match /chat_audio/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que um usuário autenticado escreva apenas em sua própria pasta de posts.
    match /posts/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que um usuário autenticado escreva apenas em sua própria pasta de reels.
    match /reels_media/{userId}/{allPaths=**} {
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Permite que um usuário autenticado escreva nas pastas de imagens de negócios.
    match /business_images/{businessId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
    
    match /business_promo_images/{businessId}/{allPaths=**} {
      allow write: if request.auth != null;
    }
  }
}
