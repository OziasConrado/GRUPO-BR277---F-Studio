rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    match /{allPaths=**} { allow read; }

    // Pasta de Patrocinadores (Aberta para testes via REST)
    match /sponsors/{allPaths=**} { allow write: if request.auth != null; }
    
    // Regras de Seguran√ßa Originais (Manter)
    match /profile_pictures/{userId}/{allPaths=**} { allow write: if request.auth != null && request.auth.uid == userId; }
    match /banners/{allPaths=**} { allow write: if request.auth != null; }
    match /posts/{userId}/{allPaths=**} { allow write: if request.auth != null && request.auth.uid == userId; }
    match /chat_images/{userId}/{allPaths=**} { allow write: if request.auth != null && request.auth.uid == userId; }
    match /chat_audio/{userId}/{allPaths=**} { allow write: if request.auth != null && request.auth.uid == userId; }
    match /business_images/{businessId}/{allPaths=**} { allow write: if request.auth != null; }
    match /business_promo_images/{businessId}/{allPaths=**} { allow write: if request.auth != null; }
    match /indicated_points_images/{userId}/{allPaths=**} { allow write: if request.auth != null && request.auth.uid == userId; }
  }
}
