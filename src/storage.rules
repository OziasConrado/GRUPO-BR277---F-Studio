
rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    
    // As imagens de perfil podem ser lidas por qualquer um, mas só podem ser
    // escritas pelo próprio usuário.
    match /profile_pictures/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Imagens de pontos turísticos indicados pela comunidade.
    // Lidas por todos, escritas apenas pelo usuário que está indicando.
    match /indicated_points_images/{userId}/{allPaths=**} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Pasta pública para imagens do app (logos, etc.)
    // Permite leitura pública e nenhuma escrita.
    match /images/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }
    match /Concessoes de Pedagio/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }
    match /Icones e Logo do app GRUPO BR277/{allPaths=**} {
        allow read: if true;
        allow write: if false;
    }
  }
}
