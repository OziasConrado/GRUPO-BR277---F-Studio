rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Function to check if the user is the owner of the document
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // --- Public Collections ---
    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId); // Allow owner to edit
      allow delete: if isOwner(resource.data.userId); // Allow owner to delete (soft delete)
      
      // Reactions and Polls subcollections
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if isOwner(userId);
      }
      match /userVotes/{userId} {
        allow read: if true;
        allow create: if isOwner(userId);
      }
       match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
      }
    }

    match /reels/{reelId} {
      allow read: if true;
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      allow update: if isOwner(resource.data.userId);
      allow delete: if isOwner(resource.data.userId);

      // Subcollections for reels
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if isOwner(userId);
      }
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isAuthenticated();
      }
    }

    match /alerts/{alertId} {
      allow read: if true;
      allow create: if isAuthenticated();
    }

    match /tourist_points_indicated/{pointId} {
      allow read: if true;
      allow create, update: if isAuthenticated(); // Allow logged-in users to suggest and admins to update
    }

    match /tourist_point_reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    match /sau_reviews/{reviewId} {
        allow read: if true;
        allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
    }
    
    // --- User-specific data ---
    // User profile and private notifications
    match /Usuarios/{userId}/{document=**} {
      allow read, write: if isOwner(userId);
    }

    // --- Chat ---
    match /chatMessages/{messageId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated() && isOwner(request.resource.data.userId);
      // Only owner can edit (text, edited flag) or delete
      allow update, delete: if isOwner(resource.data.userId);

      // Reactions subcollection for chat
       match /userReactions/{reactionUserId} {
        allow read: if isAuthenticated();
        allow create, delete: if isOwner(reactionUserId);
      }
    }
  }
}
