rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra geral de acesso para a coleção "Usuarios"
    match /Usuarios/{userId} {
      // Qualquer um pode ler perfis de usuário (para ver nomes, fotos, etc.)
      allow read: if true;
      // Apenas o próprio usuário pode escrever/atualizar seu perfil
      allow write: if request.auth != null && request.auth.uid == userId;

      // Permissões para a subcoleção de notificações
      match /notifications/{notificationId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Regras para a coleção "posts"
    match /posts/{postId} {
      // Permite leitura pública de posts, a menos que estejam marcados como deletados
      allow read: if resource.data.deleted == false;
      // Permite criar um post se o usuário estiver logado
      allow create: if request.auth != null;
      // Permite atualizar (editar, deletar) apenas se o usuário for o autor
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;

      // Subcoleção de comentários
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }
      
      // Subcoleção de reações (CORREÇÃO PRINCIPAL)
      match /userReactions/{userId} {
        // Permite que o usuário autenticado crie, atualize ou delete sua própria reação
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Regras para a coleção "reels"
    match /reels/{reelId} {
      allow read: if resource.data.deleted == false;
      allow create: if request.auth != null;
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;

      // Subcoleção de comentários dos reels
      match /comments/{commentId} {
        allow read, create: if request.auth != null;
        allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      }

      // Subcoleção de reações dos reels
      match /userReactions/{userId} {
        allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Regras para a coleção "chatMessages" (Comunidade277)
    match /chatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
      
      // Subcoleção de reações das mensagens do chat
      match /userReactions/{userId} {
         allow read, write, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Regras para a coleção de "alerts"
    match /alerts/{alertId} {
      // Permite a leitura por qualquer usuário e a criação por usuários autenticados
      allow read, create: if request.auth != null;
    }
    
    // Regras para as coleções de turismo e SAU
    match /tourist_points_indicated/{pointId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.indicatedByUserId;
    }
    
    match /tourist_point_reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
    }
    
     match /sau_reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
    }

  }
}
