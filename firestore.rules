
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Usuários podem ler perfis públicos, mas só podem editar o seu próprio.
    match /Usuarios/{userId} {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Notificações: apenas o dono pode ler/apagar, mas outros podem criar (enviar).
      match /notifications/{notificationId} {
        allow read, update, delete: if request.auth != null && request.auth.uid == userId;
        allow create: if request.auth != null;
      }
    }

    // Posts: Leitura pública, escrita apenas para autenticados, edição/deleção apenas para o autor.
    match /posts/{postId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Comentários: Leitura pública, escrita apenas para autenticados.
      match /comments/{commentId} {
        allow read;
        allow create: if request.auth != null;
      }

      // Reações e Votos: Autenticados podem criar/deletar suas próprias reações/votos.
      match /userReactions/{userId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
      match /userVotes/{userId} {
        allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Reels: Leitura pública, escrita autenticada, deleção/edição apenas para autor.
    match /reels/{reelId} {
      allow read;
      allow create: if request.auth != null;
      allow update: if request.auth != null && resource.data.userId == request.auth.uid;

      // Comentários em Reels
      match /comments/{commentId} {
        allow read;
        allow create: if request.auth != null;
      }
      // Reações em Reels
      match /userReactions/{userId} {
         allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }

    // Alertas: Leitura pública, criação autenticada.
    match /alerts/{alertId} {
      allow read;
      allow create: if request.auth != null;
    }
    
    // Avaliações de SAU: Leitura pública, criação autenticada.
    match /sau_reviews/{reviewId} {
        allow read, create: if request.auth != null;
    }

    // Avaliações de Pontos Turísticos: Leitura pública, criação autenticada.
    match /tourist_point_reviews/{reviewId} {
      allow read, create: if request.auth != null;
    }

    // Indicações de Pontos Turísticos: Leitura pública, criação autenticada.
    match /tourist_points_indicated/{pointId} {
      allow read;
      allow create: if request.auth != null;
      // Permite que o autor atualize ou um admin (futuro)
      allow update: if request.auth != null && request.resource.data.indicatedByUserId == request.auth.uid;
    }

    // Mensagens do Chat: Leitura e escrita autenticada.
    match /chatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && resource.data.userId == request.auth.uid;
      
      // Reações em Mensagens do Chat
      match /userReactions/{userId} {
         allow read, create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
