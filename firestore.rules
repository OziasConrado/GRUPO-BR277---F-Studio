
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if the user is authenticated.
    function isSignedIn() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document.
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Public Content (Read-only for most users) ---

    // Posts and Reels: Anyone can read, but only owners can create/update/delete.
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && isOwner(resource.data.userId);

      // Reactions
      match /userReactions/{userId} {
        allow read: if true;
        allow create, delete: if isOwner(userId);
      }
      
      // Comments
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && isOwner(resource.data.userId);

        match /commentReactions/{reactionUserId} {
           allow read: if true;
           allow create, delete: if isOwner(reactionUserId);
        }
      }
    }
    
    match /reels/{reelId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(resource.data.authorId);
      allow delete: if isSignedIn() && isOwner(resource.data.authorId);
      
      // Comments for Reels
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
      }
    }

    // Alerts: Anyone can read, but only authenticated users can create.
    match /alerts/{alertId} {
      allow read: if true;
      allow create: if isSignedIn();
      // No updates or deletes for alerts from the client side for now.
    }

    // --- Business Guide & Tourism (Read-heavy) ---

    // Businesses: Anyone can read. Only owners can update/delete.
    match /businesses/{businessId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update: if isSignedIn() && isOwner(resource.data.ownerId);
      // Deletion is a sensitive operation, restrict for now.
    }

    // SAU Reviews: Anyone can read, authenticated users can create.
    match /sau_reviews/{reviewId} {
      allow read: if true;
      allow create: if isSignedIn();
    }
    
    // Tourist Points: Anyone can read, authenticated users can create.
    match /tourist_points_indicated/{pointId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update: if isSignedIn() && isOwner(resource.data.indicatedByUserId);
    }
    
    // Tourist Point Reviews: Anyone can read, authenticated users can create.
    match /tourist_point_reviews/{reviewId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
    }

    // --- User Profiles ---
    
    // User Profiles: Users can read any profile, but can only create/update their own.
    match /Usu√°rios/{userId} {
      allow read: if isSignedIn();
      allow create: if isOwner(userId);
      allow update: if isSignedIn() && isOwner(userId);
      // Do not allow users to delete their own profiles directly.
      
      // Notifications subcollection
      match /notifications/{notificationId} {
        allow read, update: if isSignedIn() && isOwner(userId);
      }
    }
    
    // --- Chat ---
    match /chatMessages/{messageId} {
        allow read: if isSignedIn();
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && isOwner(resource.data.userId);
        
        match /userReactions/{reactionUserId} {
            allow read: if true;
            allow create, delete: if isOwner(reactionUserId);
        }
    }

  }
}
