
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check if a user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }

    // Helper function to check if the user is the owner of the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Users can read and update their own profile. They can create a profile document.
    match /Usuarios/{userId} {
      allow read, update: if isAuthenticated() && isOwner(userId);
      allow create: if isAuthenticated();
    }

    // Posts can be read by anyone, created by authenticated users, and only modified by their owner.
    match /posts/{postId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Alerts can be read by anyone, created by authenticated users, and only modified by their owner.
    match /alerts/{alertId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Chat messages can be read and created by any authenticated user.
    // Only the owner can update or delete their own messages.
    match /chatMessages/{messageId} {
      allow read, create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // Business listings can be read by anyone, created by authenticated users, and only modified by their owner.
    match /businesses/{businessId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
    
    // SAU locations and Tourist points are public read. Write is restricted.
    // Assumed to be managed by admins from the Firebase Console for now.
    match /sau_locations/{locationId} {
      allow read: if true;
      allow write: if false;
    }
    
    match /tourist_points/{pointId} {
      allow read: if true;
      allow write: if false;
    }
    
    // SAU reviews can be read by anyone, created by authenticated users, and only modified by their owner.
    match /sau_reviews/{reviewId} {
      allow read: if true;
      allow create: if isAuthenticated();
      allow update, delete: if isAuthenticated() && isOwner(resource.data.userId);
    }
  }
}
