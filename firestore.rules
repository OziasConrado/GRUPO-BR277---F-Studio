rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra geral de leitura: Qualquer pessoa pode ler a maioria dos dados públicos.
    match /{document=**} {
      allow read: if true;
    }

    // Coleção de Usuários
    match /Usuários/{userId} {
      // Qualquer um pode criar seu próprio perfil de usuário
      allow create: if request.auth != null && request.auth.uid == userId;
      // Um usuário só pode ler e atualizar seu próprio perfil
      allow read, update: if request.auth != null && request.auth.uid == userId;
    }

    // Posts, Reels, Alertas, Avaliações, etc.
    match /{collection}/{docId} {
      // Qualquer usuário autenticado pode criar um documento
      allow create: if request.auth != null;
      // Um usuário só pode atualizar ou deletar seus próprios documentos
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }

    // Reações (subcoleções)
    match /{collection}/{docId}/userReactions/{userId} {
      allow create, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Comentários (subcoleções de posts e reels)
    match /{collection}/{docId}/comments/{commentId} {
      allow create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;
    }
  }
}