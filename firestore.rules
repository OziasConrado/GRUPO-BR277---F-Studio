
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can manage their own profile. Anyone can read public info.
    match /Usuarios/{userId} {
      allow read;
      allow create, update: if request.auth != null && request.auth.uid == userId;

      // Notifications: Only the owner can read/update their own notifications.
      match /notifications/{notificationId} {
        allow read, update: if request.auth != null && request.auth.uid == userId;
        // Allow server-side functions to create notifications
        allow create: if request.auth != null;
      }
    }

    // Posts can be read by anyone. Only authors can update/delete their own posts.
    match /posts/{postId} {
      allow read;
      allow create: if request.auth != null;
      // The `deleted` flag is an update, so check author
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Disallow full deletes for now to allow soft deletes
      allow delete: if false;

      match /comments/{commentId} {
        allow read;
        allow create: if request.auth != null;
      }

      match /userReactions/{userId} {
        allow read;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }

      match /userVotes/{userId} {
        allow read;
        allow create, update: if request.auth != null && request.auth.uid == userId;
      }
    }
    
    // Alerts can be read by anyone and created by any authenticated user.
    match /alerts/{alertId} {
        allow read;
        allow create: if request.auth != null;
    }
    
    // Reels can be read by anyone and created by any authenticated user.
    match /reels/{reelId} {
        allow read;
        allow create: if request.auth != null;
    }
    
    // SAU reviews can be read by anyone and created by any authenticated user.
    match /sau_reviews/{reviewId} {
        allow read;
        allow create: if request.auth != null;
    }

    // Indicated tourist points can be read by anyone and created by any authenticated user.
    match /tourist_points_indicated/{pointId} {
        allow read;
        allow create: if request.auth != null;
    }
    
    // Chat messages can be read/created by any authenticated user.
    // Authors can update/delete their own messages.
    match /chatMessages/{messageId} {
      allow read, create: if request.auth != null;
      allow update, delete: if request.auth != null && request.auth.uid == resource.data.userId;

      match /userReactions/{userId} {
        allow read;
        allow create, delete: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
