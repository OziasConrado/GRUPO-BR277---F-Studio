rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para a coleção 'businesses'
    match /businesses/{businessId} {
      // Qualquer um pode ler os dados dos negócios (guia comercial público)
      allow read;
      // Um usuário logado pode criar um novo negócio.
      allow create: if request.auth != null;
      // Apenas o dono do negócio pode atualizá-lo.
      allow update: if request.auth != null && request.auth.uid == resource.data.ownerId;
      // Ninguém pode deletar um negócio diretamente (use um campo 'deleted: true')
      allow delete: if false;
    }

    // Regra para a coleção 'posts' e suas subcoleções
    match /posts/{postId} {
      // Leitura permitida para todos, exceto se o post estiver marcado como deletado
      allow read: if resource.data.deleted == false;
      // Criação permitida para usuários logados
      allow create: if request.auth != null;
      // Atualização permitida apenas para o autor do post
      allow update: if request.auth != null && request.auth.uid == resource.data.userId;
      // Ninguém pode deletar um post diretamente
      allow delete: if false;

      // Regras para subcoleções de 'posts'
      match /{allChildren=**} {
        allow read, write: if request.auth != null;
      }
    }

    // Regra para a coleção 'reels'
    match /reels/{reelId} {
        allow read: if resource.data.deleted == false;
        allow create, update: if request.auth != null && request.auth.uid == resource.data.authorId;
        allow delete: if false;
    }
    
    // Regra para a coleção de usuários
    match /Usuarios/{userId} {
      // Qualquer um pode ler perfis de usuário (para exibir em posts/comentários)
      allow read;
      // Um usuário só pode criar ou modificar seu próprio documento
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regra para a coleção 'alerts'
    match /alerts/{alertId} {
        // Qualquer usuário logado pode criar um alerta
        allow create: if request.auth != null;
        // Qualquer um pode ler os alertas
        allow read;
        // Ninguém pode atualizar ou deletar
        allow update, delete: if false;
    }

    // Regras para o chat
    match /chatMessages/{messageId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null;
        allow update: if request.auth != null && request.auth.uid == resource.data.userId;
        allow delete: if request.auth != null && request.auth.uid == resource.data.userId;

        match /{allChildren=**} {
            allow read, write: if request.auth != null;
        }
    }
    
    // Regras para avaliações de SAU
    match /sau_reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
    }
    
    // Regras para avaliações de Pontos Turisticos
    match /tourist_points_indicated/{pointId} {
      allow read: if true;
      allow create: if request.auth != null;
      allow update: if request.auth != null;
      allow delete: if false;
    }
    
    match /tourist_point_reviews/{reviewId} {
        allow read: if true;
        allow create: if request.auth != null;
        allow update, delete: if false;
    }
  }
}
